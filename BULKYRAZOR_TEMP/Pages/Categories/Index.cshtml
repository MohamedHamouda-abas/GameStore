@page
@model BULKYRAZOR_TEMP.Pages.Categories.IndexModel
@{
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create"  class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create A new Category
            </a>
        </div> 
    </div>
</div>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>CategoryOrderId</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model.CategoryList)
        {
            <tr>
                <td>@cat.Id</td>
                <td>@cat.Name</td>
                <td>@cat.DisPlayOrder</td>
                <td>
                <div class ="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Update" asp-route-Id="@cat.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                        <a asp-page="/Categories/Delete" asp-route-Id="@cat.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@page
@model BULKYRAZOR_TEMP.Pages.Categories.UpdateModel
@{
}
<form method="post">
    <input asp-for="Update.Id" type="hidden"/>
    <div class="border p-3 mt-4">
        <div class="mb-3 row p-1">
            <label asp-for="Update.Name" class="form-control"></label>
            <input asp-for="Update.Name" class="p-0" maxlength="256" />
            <span asp-validation-for="Update.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Update.DisPlayOrder" class="form-control"></label>
            <input asp-for="Update.DisPlayOrder" class="p-0" maxlength="256" />
            <span asp-validation-for="Update.DisPlayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-page="/Categories/Index" class="btn btn-secondary" style="width:150px">Back To List</a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}